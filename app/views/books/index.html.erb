<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag "no_image.jpg", size: "100x100" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_book_path(:id), class: "btn btn-outline-secondary btn-block", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <form>
          <div class="form-group">
            <label class="book_title">Title</label>
            <input class="form-control" type="text"> 
          </div>
          <div class="form-group">
            <label class="book_opinion">Opinion</label>
            <textarea class="form-control book_body"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-success">Create Book</button>
          </div>
        </form>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= @book.user.profile_image %>
                  
                </td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>
