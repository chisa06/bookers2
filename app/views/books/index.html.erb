<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag "no_image.jpg", size: "100x100" %>
        <%= form_with model: @book do |f| %>
          <label>Title</label>
          <%= f.text_field :title %>
        
          <label>Opinion</label>
          <%= f.text_area :body %>
          
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
  </div>
</main>
