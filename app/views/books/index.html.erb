<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag "no_image.jpg", size: "100x100" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_book_path(:id), class: "btn btn-outline-secondary btn-block", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <form>
          
        </form>
        <%= form_with model: @book do |f| %>
          <label>Title</label>
          <%= f.text_field :title %>
        
          <label>Opinion</label>
          <%= f.text_area :body %>
          
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
  </div>
</main>
