<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render partial: 'books/books' %>
      <div class="col-md-8 offset-md-1">
        <h2>Books detail</h2>
        <table class="table table-hover table-inverse">
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(id: book.user.id) do %>
                    <br>
                      <%= image_tag book.get_image, size: "100x100" %><br>
                      <%= book.user.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book.title, book_path(book.id) %>
                  </td>
                  <td>
                    <%= book.body %>
                  </td>
                  <% if @book.user == current_user %>
                    <td>
                      <%= link_to "Edit", edit_book_path(:id), type: "submit", class: "btn btn-sm btn-success"%>
                    </td>
                    <td>
                      <%= link_to "Destroy", book_path(:id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</main>