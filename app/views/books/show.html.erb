<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render partial: 'books/books' %>
      <div class="col-md-8 offset-md-1">
        <h2>Books detail</h2>
        <table class="table table-hover table-inverse">
          <% if @book.user == current_user %>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= image_tag book.get_image, size: "80x80"%>
                  </td>
                  <td>
                    <%= link_to book.title, book_path(book.id) %>
                  </td>
                  <td>
                    <%= book.body %>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_book_path(:id), type: "submit", class: "btn btn-sm btn-success"%>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_path(:id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>