<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <div id="error_explanation">
          <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
          <% end %>  
        </div> 
        <h2>User info</h2>
          <%= form_with model: @user, method: :patch do |f| %>
            <div class="form-group">
              <label for="inputName">Name</label>
              <%= f.text_field :name, class: "form-control", value: @user.name %>
            </div>
            <div class="form-group">
              <label for="inputImage">Image</label><br>
              <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
            </div>
            <div class="form-group">
              <label for="inputINtroduction">Introduction</label>
              <%= f.text_area :introduction, class: "form-control", value: @user.introduction %>
            </div>
            <div class="form-group">
              
              <%= f.submit "Update User", class: "btn btn-secondary" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</main>
