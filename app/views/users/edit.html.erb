<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User Info</h2>
        <form enctype="multipart/form-data" action="user_id_path" accept-charset="UTF-8" method="post">
          <input type="hidden" name="_method" value="patch" autocomplete="off">
          <input type="hidden" name="authenticity_token" value="NhehddDl4r_4Wtl5Vj04hjIiwqGJ7WF55x126lBB4i-zeeL-FhDcaNsJ5LELDH13gEDYZVZfbYX5y2HJR-Ax3Q" autocomplete="off">
          <%= form_with model: @user, url: user_path do |f| %>
            <div class="form-group">
              <label for="inputName">Name</label>
              <%= f.text_field :name, class: "form-control", value: @user.name %>
            </div>
            <div class="form-group">
              <label for="inputImage">image</label>
              <input class="form-control-file user_image" accept="image/*" type="file" name="user[profile_image]" id="user_profile_image" >
            </div>
            <div class="form-group">
              <label for="inputINtroduction">Introduction</label>
              <%= f.text_area :introduction, class: "form-control", value: @user.introduction %>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-secondary">Update User</button>
            </div>
          <% end %>
        </form>
      </div>
    </div>
  </div>
</main>
